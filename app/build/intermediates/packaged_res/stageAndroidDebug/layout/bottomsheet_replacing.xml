<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/clRoot"
        android:background="@drawable/bg_bottomsheet_header"
        android:layout_height="match_parent"
        tools:context="com.intellihealth.truemeds.presentation.bottomsheet.cart.ReplaceAllBottomSheet" android:tag="layout/bottomsheet_replacing_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clLoader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d38"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLoader"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d229"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.intellihealth.salt.views.TextView
                android:id="@+id/txtReplacingItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ivLoader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Replacing items with substitutes..."
                android:textColor="@color/tm_semantic_color_content_main_primary"
                app:bodyTextStyle="BodyXLargeSemiBold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         