<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/d16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/d304"
            android:layout_height="@dimen/d152"
            android:layout_marginTop="@dimen/d24"
            android:background="@drawable/shimmer_grey_box_16_curve"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvOne"
            android:layout_width="@dimen/d304"
            android:layout_height="@dimen/d10"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivImage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvTwo"
            android:layout_width="141dp"
            android:layout_height="@dimen/d10"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvOne" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDivider"
            android:layout_width="@dimen/d304"
            android:layout_height="@dimen/d2"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTwo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvDate"
            android:layout_width="141dp"
            android:layout_height="@dimen/d10"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDivider" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImageNext"
            android:layout_width="@dimen/d304"
            android:layout_height="@dimen/d152"
            android:layout_marginStart="@dimen/d12"
            android:layout_marginTop="@dimen/d24"
            android:background="@drawable/shimmer_grey_box_16_curve"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvOneNext"
            android:layout_width="@dimen/d304"
            android:layout_height="@dimen/d10"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d12"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toBottomOf="@+id/ivImage" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvTwoNext"
            android:layout_width="141dp"
            android:layout_height="@dimen/d10"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d12"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toBottomOf="@+id/tvOne" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDividerNext"
            android:layout_width="@dimen/d304"
            android:layout_height="@dimen/d2"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d12"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toBottomOf="@+id/tvTwo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvDateNext"
            android:layout_width="141dp"
            android:layout_height="@dimen/d10"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/d12"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shimmer_grey_tube"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toBottomOf="@+id/ivDivider" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>