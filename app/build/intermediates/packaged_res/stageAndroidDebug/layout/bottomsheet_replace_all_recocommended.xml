                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <ImageView
                                        android:id="@+id/ivIntersect"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/d4"
                                        android:src="@drawable/ic_intersect"
                                        app:layout_constraintEnd_toStartOf="@+id/txtSubsMedicine"
                                        app:layout_constraintStart_toEndOf="@id/txtItemInYourCart"
                                        app:layout_constraintTop_toTopOf="@id/txtItemInYourCart" />

                                    <com.intellihealth.salt.views.TextView
                                        android:id="@+id/txtSubsMedicine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/d16"
                                        android:text="Substitute medicine"
                                        android:textColor="@color/tm_semantic_color_content_success_default"
                                        app:bodyTextStyle="BodyMediumSemiBold"
                                        app:layout_constraintBaseline_toBaselineOf="@id/txtItemInYourCart"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvOrderList"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/d16"
                                        android:orientation="vertical"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/txtSubsMedicine"
                                        android:tag="binding_10"                                  
                                                                      
                                        tools:listitem="@layout/bottomsheet_replace_all_recocommended_item"
                                        tools:visibility="visible" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMatch"
                            android:layout_width="@dimen/d48"
                            android:layout_height="@dimen/d48"
                            android:layout_marginTop="@dimen/d24"
                            android:background="@drawable/match_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/clSubDesc"
                            tools:visibility="visible" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <com.intellihealth.salt.views.buttons.Button
                        android:id="@+id/btnMainReplaceSave"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d88"
                        android:layout_margin="@dimen/d16"
                        app:buttonSizeType="Large"
                        app:buttonTextStyle="ButtonLg"
                        app:buttonType="PrimaryButton"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clWhySubs"
                        app:title="Replace &amp; Save" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

