                                    app:bodyTextStyle="BodyMediumSemiBold" />

                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clOrderCompare"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d48"
                            android:background="@drawable/bg_curve_shape"
                            android:paddingHorizontal="@dimen/d16"
                            android:paddingBottom="@dimen/d16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/clSubDesc">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/mcCompareOrder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d28"
                                app:cardCornerRadius="@dimen/d8"
                                app:cardElevation="@dimen/d0"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:rippleColor="@android:color/transparent"
                                app:strokeColor="@color/tm_core_color_gray_100"
                                app:strokeWidth="@dimen/d1">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.intellihealth.salt.views.TextView
                                        android:id="@+id/txtItemInYourCart"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/d16"
                                        android:layout_marginTop="@dimen/d16"
