<?xml version="1.0" encoding="utf-8"?>
                                                            

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottomsheet_top_left_right_rounded" android:tag="layout/bottomsheet_login_0" xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/loginBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivClose">

        </androidx.viewpager2.widget.ViewPager2>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32"
            android:layout_margin="@dimen/d16"
            android:layout_gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/close_button" />

    </FrameLayout>
         