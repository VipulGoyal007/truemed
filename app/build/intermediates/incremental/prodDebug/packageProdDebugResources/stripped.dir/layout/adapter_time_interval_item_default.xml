<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                                   
                                                                                               
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/adapter_time_interval_item_default_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <com.intellihealth.salt.views.radiofield.RadioFieldLayout
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/d18"
            android:layout_marginBottom="@dimen/d18"
            app:radioPosition="right"
            android:visibility="gone"
            app:selected="false" />
        <com.intellihealth.salt.views.radiofield.Radio
            android:id="@+id/radioHeader"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            />

        <com.intellihealth.salt.views.TextView
            android:id="@+id/tvRadioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d8"
            android:layout_marginTop="@dimen/d16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/radioHeader"
            tools:text="Label"
            android:textColor="@color/tm_core_color_gray_800"
            app:bodyTextStyle="BodyMediumRegular"
            tools:visibility="visible" />

        <com.intellihealth.salt.views.TextView
            android:id="@+id/textSelectedCustomDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d8"
            android:layout_marginTop="@dimen/d2"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Sep. 14, 2023 to Sep. 24, 2023"
            android:textColor="@color/tm_semantic_color_content_main_primary"
            app:bodyTextStyle="BodySmallRegular"
            app:layout_constraintLeft_toRightOf="@+id/radioHeader"
            app:layout_constraintTop_toBottomOf="@+id/tvRadioLabel" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEditCustomDates"
            android:layout_width="@dimen/d24"
            android:layout_height="@dimen/d24"
            android:layout_marginRight="@dimen/d16"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_edit"></androidx.appcompat.widget.AppCompatImageView>

        <com.intellihealth.salt.views.cards.Divider
            android:id="@+id/divider_timer_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/d16"
            app:dividerColor="@color/tm_core_color_gray_100"
            app:dividerThickness="@dimen/d1"
            app:layout_constraintTop_toBottomOf="@+id/textSelectedCustomDates" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         