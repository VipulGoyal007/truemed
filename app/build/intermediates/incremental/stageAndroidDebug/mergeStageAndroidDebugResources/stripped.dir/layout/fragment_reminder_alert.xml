<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                                    
                                                                                         

           


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.bottomsheet.ReminderAlertFragment" android:tag="layout/fragment_reminder_alert_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_reminder_header"
            android:padding="@dimen/d16"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivHeader"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_calendar_bottom_sheet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.intellihealth.salt.views.TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:text="@string/yay_reminder_is_successfully_set"
                app:bodyTextStyle="BodyLargeSemiBold"
                app:layout_constraintEnd_toStartOf="@+id/imClose"
                app:layout_constraintStart_toEndOf="@+id/ivHeader"
                app:layout_constraintTop_toTopOf="@+id/ivHeader" />

            <com.intellihealth.salt.views.TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d8"
                android:layout_marginTop="@dimen/d4"
                app:bodyTextStyle="BodySmallRegular"
                android:layout_marginBottom="@dimen/d8"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintBottom_toBottomOf="@+id/ivHeader"
                app:layout_constraintStart_toEndOf="@+id/ivHeader"
                android:tag="binding_1"                                                    
                tools:text="@string/for_patient_austin_gallagher"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/imClose"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_reminder_sheet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivHeader" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLayout">


        <com.intellihealth.salt.views.TextView
            android:id="@+id/tvSnoozeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_2"                                                               
            app:bodyTextStyle="BodyLargeSemiBold"
            android:layout_marginTop="@dimen/d24"
            android:layout_marginStart="@dimen/d16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.intellihealth.salt.views.TextView
            android:id="@+id/tvUpcomingReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bodyTextStyle="BodyMediumRegular"
            android:layout_marginStart="@dimen/d16"
            android:layout_marginTop="@dimen/d6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSnoozeTime"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d16"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@+id/tvUpcomingReminder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSnoozeTime" />


        <com.intellihealth.salt.views.DividerView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            app:dividerColor="@color/tm_core_color_gray_200"
            app:dividerThickness="@dimen/d1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/d24"
            android:layout_marginHorizontal="@dimen/d16"
            app:layout_constraintTop_toBottomOf="@+id/tvUpcomingReminder"
            />

        <com.intellihealth.salt.views.TextView
            android:id="@+id/tvNextStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/next_steps"
            app:bodyTextStyle="BodyLargeSemiBold"
            android:layout_marginTop="@dimen/d24"
            android:layout_marginLeft="@dimen/d16"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            />

            <com.intellihealth.salt.views.cards.Divider
                android:id="@+id/divider2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d1"
                app:dividerColor="@color/white"
                app:dividerThickness="@dimen/d0"
                app:layout_constraintTop_toBottomOf="@+id/tvNextStep"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/d0"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/d12"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/d16"
                android:layout_marginBottom="@dimen/d33"
                android:background="@drawable/bg_reminder_rounded"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tmImageStatus"
                    android:layout_width="@dimen/d56"
                    android:layout_height="@dimen/d56"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/pharmacist_doctor_call" />

                <com.intellihealth.salt.views.TextView
                    android:id="@+id/tmTextHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d12"
                    android:textColor="@color/tm_semantic_color_content_main_primary"
                    app:bodyTextStyle="BodyMediumSemiBold"
                    android:text="@string/pharmacist_call"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/tmImageStatus"
                    app:layout_constraintTop_toTopOf="@+id/tmImageStatus"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_goneMarginBottom="0dp"
                    app:layout_goneMarginRight="@dimen/d16"
                     />

                <com.intellihealth.salt.views.TextView
                    android:id="@+id/tmTextSubHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:layout_marginEnd="@dimen/d8"
                    android:text="@string/you_will_receive_a_reminder_call_from_our_pharmacist_on_your_scheduled_date"
                    android:textColor="@color/tm_semantic_color_content_main_primary"
                    app:bodyTextStyle="BodySmallRegular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tmTextHeader"


                    app:layout_constraintTop_toBottomOf="@+id/tmTextHeader"
                    tools:visibility="visible" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        <com.intellihealth.salt.views.orderstatustimeline.OrderStatusDetailCards
            android:id="@+id/tmOrderStatusDetailCards1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="@dimen/d33"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/d8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
             />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

         