<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_corner_6"
    android:padding="24dp">

    <com.intellihealth.salt.views.TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/update_patient_info"
        android:textColor="#4F585E"
        app:bodyTextStyle="BodyLargeSemiBold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.intellihealth.salt.views.TextView
        android:id="@+id/tvNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:bodyTextStyle="BodyXLargeSemiBold"
        android:padding="8dp"
        android:text="@string/dismiss"
        android:textColor="#0071BD"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

    <com.intellihealth.salt.views.TextView
        android:id="@+id/tvYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        app:bodyTextStyle="BodyXLargeSemiBold"
        android:padding="8dp"
        android:text="@string/yes_remove"
        android:textColor="#8897A2"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/tvNo"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>