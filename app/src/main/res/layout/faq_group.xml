<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <com.intellihealth.salt.views.TextView
        android:id="@+id/appCompatTextView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bodyTextStyle="BodyMediumSemiBold"
        android:singleLine="true"
        android:text="Q."
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.intellihealth.salt.views.TextView
        android:id="@+id/tvGroupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:bodyTextStyle="BodyMediumSemiBold"
        android:text="Q."
        app:layout_constraintEnd_toStartOf="@+id/ivExpandCollapse"
        app:layout_constraintStart_toEndOf="@+id/appCompatTextView15"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExpandCollapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvGroupTitle"
        app:srcCompat="@drawable/ic_expand_down_black" />
</androidx.constraintlayout.widget.ConstraintLayout>